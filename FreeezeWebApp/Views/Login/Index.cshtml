@model FreeezeWebApp.Models.Application.Entities.AppLogin

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}

<div class="container">
    @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { htmlAttributes = new { @class = "form-signin" } }))
    {
        @Html.AntiForgeryToken()
        <h2 class="form-signin-heading">Please sign in</h2>

        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @placeholder = "Username" }, @autofocus = "autofocus" })

        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" id="Password" name="Password" class="form-control" placeholder="Password">

        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    }
</div>