@model FreeezeWebApp.Models.Database.Entities.DBEditor

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LayoutAdministrator.cshtml";
}

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MiddleName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MiddleName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Username)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Username)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UTCRegisteredOn)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UTCRegisteredOn)
        </dd>

        <dt>
            Logins
        </dt>

        <dd>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Login time (UTC)</th>
                            <th>Logout time (UTC)</th>
                            <th>User agent</th>
                            <th>IP address</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Logins)
                        {
                            <tr>
                                <td>@item.UTCLoginTime</td>
                                <td>@item.UTCLogoutTime</td>
                                <td>@item.UserAgent.Substring(0, (item.UserAgent.Length < 50) ? item.UserAgent.Length : 50)...</td>
                                <td>@item.UserIP</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
